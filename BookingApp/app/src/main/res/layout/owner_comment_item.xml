<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/comment_card_item"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/commenter_profile_pic"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:src="@drawable/profile_image"
        android:contentDescription="@string/commenter_profile_pic"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_cc"
        android:clickable="false">
        
        <TextView
            android:id="@+id/commenter_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="Name Surname"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/star_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/kid_star" />
        </LinearLayout>

        
        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="Content"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/dark_gray"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            


            <ImageButton
                android:id="@+id/delete_comment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_border_background"
                android:contentDescription="delete comment"
                android:src="@drawable/delete"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment Date"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textAlignment="textEnd" />

                <ImageView
                    android:id="@+id/calendar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/baseline_calendar_month_24"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
