<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:paddingHorizontal="20dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/filters"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="italic" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_margin="2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amenities"
            android:textColor="@color/dark_gray"/>

        <CheckBox
            android:id="@+id/wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wifi"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/cancellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="free cancellation"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="good location"
            android:textColor="@color/dark_gray"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accommodation type"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hotel"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/studio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="studio"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room"
            android:textColor="@color/dark_gray"/>
        <CheckBox
            android:id="@+id/villa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="villa"
            android:textColor="@color/dark_gray"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price range"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/min_price"
                android:layout_width="wrap_content"
                android:minWidth="170dp"
                android:layout_height="wrap_content"
                android:maxHeight="10dp"
                android:hint=" minimum price"
                android:textColorHint="@color/transparent_40_dark_gray"
                android:inputType="number"
                android:textColor="@color/dark_gray"
                android:drawableStart="@drawable/icons8_dollar_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_marginBottom="3dp"/>
            <EditText
                android:id="@+id/max_price"
                android:layout_width="match_parent"
                android:maxWidth="200dp"
                android:textColor="@color/dark_gray"
                android:layout_height="wrap_content"
                android:hint="Maximum price"
                android:textColorHint="@color/transparent_40_dark_gray"
                android:inputType="number"
                android:drawableStart="@drawable/icons8_dollar_16"/>
        </LinearLayout>





        <Button
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:minWidth="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/transparent_60_dark_gray"
            android:enabled="true"
            android:text="Apply filters"
            android:textColor="@color/white"
            android:textColorHint="@color/transparent_60_dark_gray"/>

    </LinearLayout>

</LinearLayout>