<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReservationGuestFragment"
    android:background="@drawable/phone_background_1">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        android:background="@drawable/round_corner"
        android:layout_gravity="center"
        android:backgroundTint="@color/transparent_80_grayish_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My reservations"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="15dp"
            android:textColor="@color/dark_gray"/>

        <ListView
            android:id="@+id/reservation_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>