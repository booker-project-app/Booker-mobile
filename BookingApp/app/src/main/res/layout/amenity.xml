<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/round_corner_alternative"
    android:backgroundTint="@color/transparent_40_light_gray"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/amenity_card"
    android:gravity="center"
    android:layout_marginBottom="3dp"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icons8_location_32"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Popular location"
        android:textSize="12dp"
        android:textFontWeight="15"
        android:layout_marginLeft="5dp"/>


</LinearLayout>
