<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UpdateAccommodationFragment"
    android:background="@drawable/phone_background_1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:layout_marginVertical="20dp"
                android:background="@drawable/round_corner"
                android:layout_gravity="center"
                android:backgroundTint="@color/transparent_80_grayish_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My accommodation"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/dark_gray"/>

                <ListView
                    android:id="@+id/list_approved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:layout_marginVertical="20dp"
                android:background="@drawable/round_corner"
                android:layout_gravity="center"
                android:backgroundTint="@color/transparent_80_grayish_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unapproved accommodation"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/dark_gray"/>

                <ListView
                    android:id="@+id/list_unapproved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>